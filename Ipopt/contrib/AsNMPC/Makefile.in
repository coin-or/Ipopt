asnmpc_lib = asnmpc_lib
ampl_asnmpc_exe = ampl_asnmpc_exe
ALL_TARGETS = $(asnmpc_lib) $(ampl_asnmpc_exe)
DIRS = ./src
TARGETDIRS = ./src

@COIN_HAS_ASL_TRUE@ALL_TARGETS += $(ampl_asnmpc_exe)
@COIN_HAS_ASL_TRUE@DIRS += ./AmplSolver
@COIN_HAS_ASL_TRUE@TARGETDIRS += ./AmplSolver

all: $(ALL_TARGETS)

install: all
	for d in $(TARGETDIRS); do (cd $$d; $(MAKE) install ); done

clean: 
	-for d in $(DIRS); do (cd $$d; $(MAKE) clean ); done

$(ampl_asnmpc_exe): $(asnmpc_lib)
	$(MAKE) -C AmplSolver

$(asnmpc_lib): 
	$(MAKE) -C src
