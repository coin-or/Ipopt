# Directory to the sources for the (example) problem definition files
SRCDIR = @srcdir@
VPATH = @srcdir@

# Compiler options
F77 = @F77@
FFLAGS = @FFLAGS@

# Directory with libipopt.a
IPOPTLIBDIR = @libdir@
exec_prefix = @exec_prefix@
prefix = @prefix@

# Libraries necessary to link with IPOPT
#LIBS = -L$(IPOPTLIBDIR) -lipopt @IPADDLIBS@
LIBS = @ipoptlib@ @IPADDLIBS@

# CHANGEME: This should be the name of your executable
EXE = example@EXEEXT@

# CHANGEME: Here is the name of all object files corresponding to the source
#           code that you wrote in order to define the problem statement
OBJS = example.@OBJEXT@

# The following is necessary under cygwin, if native compilers are used
CYGPATH_W = @CYGPATH_W@

all: $(EXE)

.SUFFIXES: .f .o .obj

$(EXE): $(OBJS)
	bla=;\
	for file in $(OBJS); do bla="$$bla `$(CYGPATH_W) $$file`"; done; \
	$(F77) $(FFLAGS) -o $@ $$bla $(LIBS)

clean:
	rm -rf $(EXE) $(OBJS)

.f.o:
	$(F77) $(FFLAGS) -c -o $@ `test -f '$<' || echo '$(SRCDIR)/'`$<


.f.obj:
	$(F77) $(FFLAGS) -c -o $@ `if test -f '$<'; then $(CYGPATH_W) '$<'; else $(CYGPATH_W) '$(SRCDIR)/$<'; fi`
