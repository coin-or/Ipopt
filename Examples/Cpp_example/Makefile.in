# Directory to the sources for the (example) problem definition files
SRCDIR = @srcdir@
VPATH = @srcdir@

# Compiler options
CXX = @CXX@
CXXFLAGS = @CXXFLAGS@

# Directory with header files
IPOPTINCDIR = @includedir@/ipopt

# Directory with libipopt.a
IPOPTLIBDIR = @libdir@
exec_prefix = @exec_prefix@
prefix = @prefix@

# Libraries necessary to link with IPOPT
#LIBS = -L$(IPOPTLIBDIR) -lipopt @IPADDLIBS@
LIBS = @ipoptlib@ @IPADDLIBS@ @FLIBS@

# Necessary Include dirs
INCL =  -I$(IPOPTINCDIR)

# CHANGEME: This should be the name of your executable
EXE = cpp_example@EXEEXT@

# CHANGEME: Here is the name of all object files corresponding to the source
#           code that you wrote in order to define the problem statement
OBJS =  cpp_example.@OBJEXT@ \
	MyNLP.@OBJEXT@

# The following is necessary under cygwin, if native compilers are used
CYGPATH_W = @CYGPATH_W@

all: $(EXE)

.SUFFIXES: .cpp .c .o .obj

$(EXE): $(OBJS)
	bla=;\
	for file in $(OBJS); do bla="$$bla `$(CYGPATH_W) $$file`"; done; \
	$(CXX) $(CXXFLAGS) -o $@ $$bla $(LIBS)

clean:
	rm -rf $(EXE) $(OBJS)

.cpp.o:
	$(CXX) $(CXXFLAGS) $(INCL) -c -o $@ `test -f '$<' || echo '$(SRCDIR)/'`$<


.cpp.obj:
	$(CXX) $(CXXFLAGS) $(INCL) -c -o $@ `if test -f '$<'; then $(CYGPATH_W) '$<'; else $(CYGPATH_W) '$(SRCDIR)/$<'; fi`
